    <scm>
        <connection>scm:git:git@github.com:soot-oss/SootUp.git</connection>
        <developerConnection>scm:git:git@github.com:soot-oss/SootUp.git</developerConnection>
        <url>https://github.com/soot-oss/SootUp</url>
    </scm>
